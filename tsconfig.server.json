{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-server",
    "rootDir": "./src",
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "verbatimModuleSyntax": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false
  },
  "include": [
    "src/server/simple-index.ts",
    "src/server/lib/**/*",
    "src/server/middleware/**/*",
    "src/server/routes/auth.ts",
    "src/server/routes/evaluations.ts",
    "src/server/routes/responses.ts",
    "src/server/routes/riskSheets.ts",
    "src/server/routes/actions.ts",
    "src/server/routes/correlations.ts",
    "src/server/routes/audit.ts",
    "src/server/routes/tenants.ts",
    "src/server/routes/notifications.ts",
    "src/server/routes/rag.ts",
    "src/server/services/simpleAnalyticsService.ts",
    "src/server/services/simpleNotificationService.ts",
    "src/server/services/enhancedAnalyticsService.ts",
    "src/lib/auth.ts",
    "src/lib/utils.ts",
    "src/lib/gamrScoring.ts",
    "src/lib/evaluation-scoring.ts",
    "src/lib/evaluation-ai-assistant.ts",
    "src/lib/questionnaireValidation.ts",
    "src/data/securityQuestionnaire.ts",
    "src/types/**/*",
    "prisma/schema.prisma"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
